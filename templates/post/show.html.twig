{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="col-md-8">
    <div class="mt-5">
        <div class="mt-5">
            <h1>{{ post.title }}</h1>
            <p class="text-muted">
                <span>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</span>
            </p>
            <p class="mt-4">
                {{ post.content }}
            </p>
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="mt-5">
        <div class="p-4 mt-5 border shadow-sm rounded">
            <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-primary">edit</a>

            {{ include('post/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
