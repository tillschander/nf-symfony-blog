<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        {% endblock %}
    </head>
    <body>
        <header class="navbar navbar-expand navbar-dark bg-dark">
            <nav class="container">
                <a class="navbar-brand" href="{{ path('home') }}">Symfony Blog</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('post_index') }}">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('post_new') }}">Write</a>
                    </li>
                </ul>
            </nav>
        </header>

        {% block beforebody %}{% endblock %}

        <div class="container">
            <div class="row py-4">
                {% block body %}{% endblock %}
            </div>
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
